<!-- login.ejs -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="./IMG/logo.png">
    <title>Form Validation</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./css/sign.css">
    <script defer src="./js/script1.js"></script>
</head>
<body style="background: url(./IMG/bgimage.jpg); background-size: cover; background-repeat: no-repeat; background-attachment: fixed;">
        <a href="/adminlogin" class="logo"><i class="fas fa-bread-slice"></i>ADMIN</a>
        <form id="form1" method="post" action="/login">
            <h1>Welcome</h1>
            <h1>To E Canteen</h1>
            <h3><% if (message) { %>
              <p><%= message %></p>
            <% } %></h3>
            <div class="input-control">
                <input id="email" name="email" type="text" placeholder="Email Address" class="box">
                <div class="error"></div>
            </div>
            <div class="input-control">
                <input id="password"name="password" type="password" placeholder="Password" class="box">
                <div class="error"></div>
            </div>
            <div class="but">
            <button type="submit" >Log In</button>
            </div>
            <div class="last">
            <p class="pir">Create Account <a href="/signup">Sign Up</a></p>
            </div>
        </form>
    </div>
</body>
</html>
